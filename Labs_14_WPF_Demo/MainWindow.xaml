<Window x:Class="Labs_14_WPF_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labs_14_WPF_Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto" d:DesignWidth="1050.857">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button x:Name="Button01" Grid.Row="0" Grid.Column="0" Background="DeepPink" Click="Button01_Click" />
        <Label x:Name="Label01" Grid.Row="0" Grid.Column="1" Background="Blue" />
        <ListBox x:Name="ListBox01" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" Background="Green" />
        <Button x:Name="Reset" Grid.Row="3" Grid.Column="0" Background="Yellow" Click="Reset_Click" />
    </Grid>
</Window>